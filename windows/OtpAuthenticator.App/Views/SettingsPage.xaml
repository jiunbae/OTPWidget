<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="OtpAuthenticator.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OtpAuthenticator.App.Views">

    <ScrollViewer Padding="24" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="800" Spacing="4" Padding="0,0,0,48">
            <TextBlock Text="Settings"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="0,0,0,24" />

            <!-- General -->
            <TextBlock Text="General"
                       Style="{StaticResource SectionHeaderStyle}" />

            <Border Style="{StaticResource AccountCardStyle}">
                <StackPanel Spacing="16">
                    <ToggleSwitch x:Name="StartWithWindowsToggle"
                                  Header="Start with Windows"
                                  OffContent="Off"
                                  OnContent="On" />

                    <ToggleSwitch x:Name="StartMinimizedToggle"
                                  Header="Start minimized"
                                  OffContent="Off"
                                  OnContent="On" />

                    <ToggleSwitch x:Name="MinimizeToTrayToggle"
                                  Header="Minimize to system tray"
                                  OffContent="Off"
                                  OnContent="On" />
                </StackPanel>
            </Border>

            <!-- Clipboard -->
            <TextBlock Text="Clipboard"
                       Style="{StaticResource SectionHeaderStyle}" />

            <Border Style="{StaticResource AccountCardStyle}">
                <StackPanel Spacing="16">
                    <ComboBox x:Name="ClipboardClearCombo"
                              Header="Clear clipboard after"
                              HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="Never" Tag="0" />
                        <ComboBoxItem Content="15 seconds" Tag="15" />
                        <ComboBoxItem Content="30 seconds" Tag="30" />
                        <ComboBoxItem Content="1 minute" Tag="60" />
                        <ComboBoxItem Content="2 minutes" Tag="120" />
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Appearance -->
            <TextBlock Text="Appearance"
                       Style="{StaticResource SectionHeaderStyle}" />

            <Border Style="{StaticResource AccountCardStyle}">
                <StackPanel Spacing="16">
                    <ComboBox x:Name="ThemeCombo"
                              Header="Theme"
                              HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="System default" Tag="System" />
                        <ComboBoxItem Content="Light" Tag="Light" />
                        <ComboBoxItem Content="Dark" Tag="Dark" />
                    </ComboBox>

                    <ToggleSwitch x:Name="EnableWidgetToggle"
                                  Header="Enable Windows 11 Widget"
                                  OffContent="Off"
                                  OnContent="On" />
                </StackPanel>
            </Border>

            <!-- Security -->
            <TextBlock Text="Security"
                       Style="{StaticResource SectionHeaderStyle}" />

            <Border Style="{StaticResource AccountCardStyle}">
                <StackPanel Spacing="16">
                    <ToggleSwitch x:Name="RequireAuthToggle"
                                  Header="Require Windows Hello on startup"
                                  OffContent="Off"
                                  OnContent="On" />
                </StackPanel>
            </Border>

            <!-- Cloud Sync - Coming Soon -->
            <!--
            <TextBlock Text="Cloud Sync"
                       Style="{StaticResource SectionHeaderStyle}" />

            <Border Style="{StaticResource AccountCardStyle}">
                <StackPanel Spacing="16">
                    <ToggleSwitch x:Name="CloudSyncToggle"
                                  Header="Enable cloud sync"
                                  OffContent="Off"
                                  OnContent="On" />

                    <ComboBox x:Name="CloudProviderCombo"
                              Header="Cloud provider"
                              HorizontalAlignment="Stretch"
                              IsEnabled="False">
                        <ComboBoxItem Content="None" Tag="None" />
                        <ComboBoxItem Content="OneDrive" Tag="OneDrive" />
                        <ComboBoxItem Content="Google Drive" Tag="GoogleDrive" />
                    </ComboBox>

                    <Button x:Name="SyncNowButton"
                            Content="Sync Now"
                            IsEnabled="False" />
                </StackPanel>
            </Border>
            -->

            <!-- About -->
            <TextBlock Text="About"
                       Style="{StaticResource SectionHeaderStyle}" />

            <Border Style="{StaticResource AccountCardStyle}">
                <StackPanel Spacing="8">
                    <TextBlock Text="OTP Authenticator"
                               FontWeight="SemiBold" />
                    <TextBlock Text="Version 1.0.0"
                               Opacity="0.7" />
                    <HyperlinkButton Content="View on GitHub"
                                     NavigateUri="https://github.com" />
                </StackPanel>
            </Border>

            <!-- Reset -->
            <Border Style="{StaticResource AccountCardStyle}"
                    Margin="0,16,0,0">
                <Button x:Name="ResetButton"
                        Content="Reset all settings"
                        HorizontalAlignment="Stretch" />
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
