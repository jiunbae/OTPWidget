<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="OtpAuthenticator.App.Views.QrScannerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OtpAuthenticator.App.Views"
    Title="Scan QR Code"
    PrimaryButtonText="Add Account"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    IsPrimaryButtonEnabled="False">

    <StackPanel Spacing="16" MinWidth="400">
        <!-- Status Message -->
        <InfoBar x:Name="StatusInfoBar"
                 IsOpen="True"
                 IsClosable="False"
                 Severity="Informational"
                 Message="Choose a scan method below" />

        <!-- Scan Buttons -->
        <StackPanel Spacing="8">
            <Button x:Name="ScanScreenButton"
                    HorizontalAlignment="Stretch"
                    Padding="16,12">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE7B3;" FontSize="20" />
                    <StackPanel>
                        <TextBlock Text="Scan Screen" FontWeight="SemiBold" />
                        <TextBlock Text="Capture QR code visible on screen"
                                   FontSize="12" Opacity="0.7" />
                    </StackPanel>
                </StackPanel>
            </Button>

            <Button x:Name="ScanAreaButton"
                    HorizontalAlignment="Stretch"
                    Padding="16,12">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE8B0;" FontSize="20" />
                    <StackPanel>
                        <TextBlock Text="Select Area" FontWeight="SemiBold" />
                        <TextBlock Text="Draw a rectangle around the QR code"
                                   FontSize="12" Opacity="0.7" />
                    </StackPanel>
                </StackPanel>
            </Button>

            <Button x:Name="ImportImageButton"
                    HorizontalAlignment="Stretch"
                    Padding="16,12">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <FontIcon Glyph="&#xE8B9;" FontSize="20" />
                    <StackPanel>
                        <TextBlock Text="From Image File" FontWeight="SemiBold" />
                        <TextBlock Text="Import QR code from PNG, JPG, BMP"
                                   FontSize="12" Opacity="0.7" />
                    </StackPanel>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Scanned Account Preview -->
        <Border x:Name="AccountPreview"
                Visibility="Collapsed"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Border Grid.Column="0"
                        Width="48"
                        Height="48"
                        CornerRadius="24"
                        Background="{StaticResource PrimaryBrush}"
                        Margin="0,0,16,0">
                    <TextBlock x:Name="AccountInitial"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>

                <!-- Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="AccountIssuer"
                               FontWeight="SemiBold"
                               FontSize="16" />
                    <TextBlock x:Name="AccountName"
                               Opacity="0.7"
                               FontSize="13" />
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                        <Border Background="{ThemeResource SystemAccentColorLight2}"
                                CornerRadius="4"
                                Padding="6,2">
                            <TextBlock x:Name="AccountType"
                                       FontSize="11"
                                       Foreground="White" />
                        </Border>
                        <TextBlock x:Name="AccountAlgorithm"
                                   FontSize="11"
                                   Opacity="0.5"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- URI Entry (Advanced) -->
        <Expander Header="Advanced: Paste URI" HorizontalAlignment="Stretch" Margin="0,8,0,0">
            <StackPanel Spacing="8" Padding="0,8,0,0">
                <TextBox x:Name="ManualUriTextBox"
                         PlaceholderText="otpauth://totp/Example:user@example.com?secret=..." />
                <Button x:Name="ParseUriButton"
                        Content="Parse URI"
                        HorizontalAlignment="Right" />
            </StackPanel>
        </Expander>

        <!-- Loading -->
        <ProgressBar x:Name="LoadingProgress"
                     IsIndeterminate="True"
                     Visibility="Collapsed" />
    </StackPanel>
</ContentDialog>
