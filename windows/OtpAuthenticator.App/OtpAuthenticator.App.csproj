<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <RootNamespace>OtpAuthenticator.App</RootNamespace>
    <AssemblyName>OtpAuthenticator</AssemblyName>
    <UseWinUI>true</UseWinUI>
    <EnableMsixTooling>true</EnableMsixTooling>
    <!-- 개발: None (기본), Widget 테스트: MSIX (-p:WindowsPackageType=MSIX) -->
    <WindowsPackageType>None</WindowsPackageType>
    <!-- Self-contained for dev sideloading -->
    <WindowsAppSDKSelfContained>true</WindowsAppSDKSelfContained>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <!-- Windows App SDK -->
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.8.250907003" />
    <PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.4654" />

    <!-- MVVM Toolkit -->
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.2" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.Primitives" Version="8.1.240916" />
    <PackageReference Include="CommunityToolkit.WinUI.Controls.Segmented" Version="8.1.240916" />

    <!-- System Tray -->
    <PackageReference Include="H.NotifyIcon.WinUI" Version="2.1.3" />

    <!-- DI -->
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.1" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OtpAuthenticator.Core\OtpAuthenticator.Core.csproj" />
    <ProjectReference Include="..\OtpAuthenticator.Core.Windows\OtpAuthenticator.Core.Windows.csproj" />
  </ItemGroup>

  <!-- Widget 출력 파일을 패키지에 복사 (Widget.exe만, DLL은 App과 공유) -->
  <Target Name="CopyWidgetToPackage" AfterTargets="Build" Condition="'$(WindowsPackageType)' == 'MSIX'">
    <PropertyGroup>
      <WidgetOutputPath>..\OtpAuthenticator.Widget\bin\$(Platform)\$(Configuration)\net8.0-windows10.0.22621.0</WidgetOutputPath>
    </PropertyGroup>
    <ItemGroup>
      <!-- Only copy Widget executable and its unique files, not SDK DLLs -->
      <WidgetExeFiles Include="$(WidgetOutputPath)\OtpAuthenticator.Widget.exe" />
      <WidgetExeFiles Include="$(WidgetOutputPath)\OtpAuthenticator.Widget.dll" />
      <WidgetExeFiles Include="$(WidgetOutputPath)\OtpAuthenticator.Widget.deps.json" />
      <WidgetExeFiles Include="$(WidgetOutputPath)\OtpAuthenticator.Widget.runtimeconfig.json" />
      <WidgetExeFiles Include="$(WidgetOutputPath)\Templates\*.json" />
    </ItemGroup>
    <Copy SourceFiles="@(WidgetExeFiles)" DestinationFolder="$(OutputPath)" SkipUnchangedFiles="true" />
    <!-- Copy Templates folder -->
    <ItemGroup>
      <WidgetTemplates Include="$(WidgetOutputPath)\Templates\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(WidgetTemplates)" DestinationFolder="$(OutputPath)Templates\%(RecursiveDir)" SkipUnchangedFiles="true" />
  </Target>

  <ItemGroup>
    <Content Include="Assets\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Public\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <None Update="Package.appxmanifest">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>

  <ItemGroup Condition="'$(DisableMsixProjectCapabilityAddedByProject)'!='true' and '$(EnableMsixTooling)'=='true'">
    <ProjectCapability Include="Msix" />
  </ItemGroup>

</Project>
