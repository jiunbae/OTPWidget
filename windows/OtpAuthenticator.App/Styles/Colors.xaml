<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#4DA3E0" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#005A9E" />

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="AccentBrush" Color="#00B4D8" />
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10" />
    <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#E81123" />

    <!-- OTP Code Brushes -->
    <SolidColorBrush x:Key="OtpCodeBrush" Color="#1A1A1A" />
    <SolidColorBrush x:Key="OtpCodeBrushDark" Color="#FFFFFF" />

</ResourceDictionary>
