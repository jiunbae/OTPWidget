<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:OtpAuthenticator.macOS.ViewModels"
             x:Class="OtpAuthenticator.macOS.Views.AccountListPage"
             x:DataType="viewmodels:AccountListViewModel"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddAccountCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="20">

        <!-- Timer Display -->
        <Frame Grid.Row="0" Padding="15" Margin="0,0,0,15" BackgroundColor="{StaticResource Gray100}">
            <Grid ColumnDefinitions="*,Auto">
                <ProgressBar Grid.Column="0"
                             Progress="{Binding Progress}"
                             ProgressColor="{StaticResource Primary}"
                             HeightRequest="8" />
                <Label Grid.Column="1"
                       Text="{Binding RemainingSeconds, StringFormat='{0}s'}"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="15,0,0,0"
                       VerticalOptions="Center" />
            </Grid>
        </Frame>

        <!-- Account List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Accounts}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedAccount}">

            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="No accounts yet"
                           FontSize="18"
                           TextColor="{StaticResource Gray400}"
                           HorizontalOptions="Center" />
                    <Button Text="Add Account"
                            Command="{Binding AddAccountCommand}"
                            Margin="0,20,0,0" />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:AccountItemViewModel">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Edit"
                                           BackgroundColor="{StaticResource Primary}"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AccountListViewModel}}, Path=EditAccountCommand}"
                                           CommandParameter="{Binding}" />
                                <SwipeItem Text="Delete"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AccountListViewModel}}, Path=DeleteAccountCommand}"
                                           CommandParameter="{Binding}" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame Padding="15" Margin="0,5" BackgroundColor="White">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AccountListViewModel}}, Path=CopyCodeCommand}"
                                    CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>

                            <Grid ColumnDefinitions="50,*,Auto">
                                <!-- Initial Circle -->
                                <Frame Grid.Column="0"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       CornerRadius="25"
                                       BackgroundColor="{Binding Color}"
                                       Padding="0"
                                       HasShadow="False">
                                    <Label Text="{Binding Initial}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                </Frame>

                                <!-- Account Info -->
                                <StackLayout Grid.Column="1" Margin="15,0" VerticalOptions="Center">
                                    <Label Text="{Binding Issuer}"
                                           FontSize="16"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding AccountName}"
                                           FontSize="14"
                                           TextColor="{StaticResource Gray500}" />
                                </StackLayout>

                                <!-- OTP Code -->
                                <Label Grid.Column="2"
                                       Text="{Binding CurrentCode}"
                                       FontSize="28"
                                       FontFamily="Courier New"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Primary}"
                                       VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>

</ContentPage>
