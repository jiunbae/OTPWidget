<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="OtpAuthenticator.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OtpAuthenticator.App"
    xmlns:converters="using:OtpAuthenticator.App.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Styles/Colors.xaml" />
                <ResourceDictionary Source="Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:CopyIconConverter x:Key="CopyIconConverter" />
            <converters:ProgressToColorConverter x:Key="ProgressToColorConverter" />
            <converters:CopiedBackgroundConverter x:Key="CopiedBackgroundConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
