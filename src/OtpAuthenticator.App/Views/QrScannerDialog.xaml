<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="OtpAuthenticator.App.Views.QrScannerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OtpAuthenticator.App.Views"
    Title="Scan QR Code"
    PrimaryButtonText="Add Account"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    IsPrimaryButtonEnabled="False">

    <StackPanel Spacing="16" MinWidth="400">
        <!-- Status Message -->
        <InfoBar x:Name="StatusInfoBar"
                 IsOpen="True"
                 IsClosable="False"
                 Severity="Informational" />

        <!-- Scan Buttons -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="ScanScreenButton"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,4,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE7B3;" FontSize="16" />
                    <TextBlock Text="Scan Screen" />
                </StackPanel>
            </Button>

            <Button x:Name="ScanAreaButton"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Margin="4,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8B0;" FontSize="16" />
                    <TextBlock Text="Select Area" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- Scanned Account Preview -->
        <Border x:Name="AccountPreview"
                Visibility="Collapsed"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <Border Grid.Column="0"
                        Width="48"
                        Height="48"
                        CornerRadius="24"
                        Background="{StaticResource PrimaryBrush}"
                        Margin="0,0,16,0">
                    <TextBlock x:Name="AccountInitial"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>

                <!-- Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="AccountIssuer"
                               FontWeight="SemiBold"
                               FontSize="16" />
                    <TextBlock x:Name="AccountName"
                               Opacity="0.7"
                               FontSize="13" />
                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                        <Border Background="{ThemeResource SystemAccentColorLight2}"
                                CornerRadius="4"
                                Padding="6,2">
                            <TextBlock x:Name="AccountType"
                                       FontSize="11"
                                       Foreground="White" />
                        </Border>
                        <TextBlock x:Name="AccountAlgorithm"
                                   FontSize="11"
                                   Opacity="0.5"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Divider -->
        <Grid Margin="0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" VerticalAlignment="Center" />
            <TextBlock Grid.Column="1" Text="OR" Margin="16,0" Opacity="0.5" FontSize="12" />
            <Border Grid.Column="2" Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" VerticalAlignment="Center" />
        </Grid>

        <!-- Manual Entry -->
        <TextBox x:Name="ManualUriTextBox"
                 Header="Enter otpauth:// URI manually"
                 PlaceholderText="otpauth://totp/Example:user@example.com?secret=..." />

        <Button x:Name="ParseUriButton"
                Content="Parse URI"
                HorizontalAlignment="Right" />

        <!-- Loading -->
        <ProgressBar x:Name="LoadingProgress"
                     IsIndeterminate="True"
                     Visibility="Collapsed" />
    </StackPanel>
</ContentDialog>
