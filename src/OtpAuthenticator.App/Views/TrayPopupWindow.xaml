<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="OtpAuthenticator.App.Views.TrayPopupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OtpAuthenticator.App.Views"
    xmlns:vm="using:OtpAuthenticator.App.ViewModels"
    Title="OTP Authenticator">

    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
          CornerRadius="8"
          Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <FontIcon Glyph="&#xE8D7;" FontSize="18" Margin="0,0,8,0" />
                <TextBlock Text="OTP Authenticator"
                           Style="{StaticResource SubtitleTextBlockStyle}" />
            </StackPanel>

            <Button x:Name="ExpandButton"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    ToolTipService.ToolTip="Open main window">
                <FontIcon Glyph="&#xE8A7;" FontSize="14" />
            </Button>
        </Grid>

        <!-- Account List -->
        <ListView x:Name="AccountListView"
                  Grid.Row="1"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:AccountItemViewModel">
                    <Grid Padding="8,12"
                          Background="Transparent"
                          PointerEntered="OnItemPointerEntered"
                          PointerExited="OnItemPointerExited">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Grid.Column="0"
                                Width="36"
                                Height="36"
                                CornerRadius="18"
                                Background="{StaticResource PrimaryBrush}"
                                Margin="0,0,12,0">
                            <TextBlock Text="{x:Bind Initial}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Issuer}"
                                       FontWeight="SemiBold"
                                       FontSize="13" />
                            <TextBlock Text="{x:Bind AccountName}"
                                       FontSize="11"
                                       Opacity="0.6" />
                        </StackPanel>

                        <!-- Code -->
                        <StackPanel Grid.Column="2"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="{x:Bind FormattedCode, Mode=OneWay}"
                                       FontFamily="Consolas"
                                       FontSize="20"
                                       FontWeight="SemiBold" />
                            <ProgressBar Value="{x:Bind Progress, Mode=OneWay}"
                                         Maximum="1"
                                         Height="3"
                                         Margin="0,4,0,0" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty State -->
        <StackPanel x:Name="EmptyState"
                    Grid.Row="1"
                    Visibility="Collapsed"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <FontIcon Glyph="&#xE8D7;" FontSize="32" Opacity="0.3" />
            <TextBlock Text="No accounts"
                       Margin="0,8,0,0"
                       Opacity="0.5" />
        </StackPanel>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="8">
                <Button x:Name="ScanButton" ToolTipService.ToolTip="Scan QR code">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE8B0;" FontSize="14" />
                        <TextBlock Text="Scan" FontSize="12" />
                    </StackPanel>
                </Button>

                <Button x:Name="SettingsButton" ToolTipService.ToolTip="Settings">
                    <FontIcon Glyph="&#xE713;" FontSize="14" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
