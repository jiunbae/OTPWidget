<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:mp="http://schemas.microsoft.com/appx/2014/phone/manifest"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:uap3="http://schemas.microsoft.com/appx/manifest/uap/windows10/3"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  xmlns:com="http://schemas.microsoft.com/appx/manifest/com/windows10"
  xmlns:uap5="http://schemas.microsoft.com/appx/manifest/uap/windows10/5"
  IgnorableNamespaces="uap uap3 uap5 rescap com">

  <Identity
    Name="OtpAuthenticator"
    Publisher="CN=OtpAuthenticator"
    Version="1.0.0.0" />

  <mp:PhoneIdentity PhoneProductId="12345678-1234-1234-1234-123456789012" PhonePublisherId="00000000-0000-0000-0000-000000000000"/>

  <Properties>
    <DisplayName>OTP Authenticator</DisplayName>
    <PublisherDisplayName>OTP Authenticator</PublisherDisplayName>
    <Logo>Assets\Logo\StoreLogo.png</Logo>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Universal" MinVersion="10.0.19041.0" MaxVersionTested="10.0.22621.0" />
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.19041.0" MaxVersionTested="10.0.22621.0" />
  </Dependencies>

  <Resources>
    <Resource Language="en-US"/>
    <Resource Language="ko-KR"/>
  </Resources>

  <Applications>
    <Application Id="App"
      Executable="$targetnametoken$.exe"
      EntryPoint="$targetentrypoint$">

      <uap:VisualElements
        DisplayName="OTP Authenticator"
        Description="Secure two-factor authentication for Windows"
        BackgroundColor="transparent"
        Square150x150Logo="Assets\Logo\Square150x150Logo.png"
        Square44x44Logo="Assets\Logo\Square44x44Logo.png">
        <uap:DefaultTile Wide310x150Logo="Assets\Logo\Wide310x150Logo.png" />
        <uap:SplashScreen Image="Assets\Logo\SplashScreen.png" />
      </uap:VisualElements>

      <Extensions>
        <!-- Startup Task -->
        <uap:Extension Category="windows.startupTask">
          <uap:StartupTask
            TaskId="OtpAuthStartup"
            Enabled="false"
            DisplayName="OTP Authenticator" />
        </uap:Extension>

        <!-- Protocol Handler (otpauth://) -->
        <uap:Extension Category="windows.protocol">
          <uap:Protocol Name="otpauth">
            <uap:DisplayName>OTP Auth Protocol</uap:DisplayName>
          </uap:Protocol>
        </uap:Extension>

        <!-- COM Server for Widget Provider -->
        <com:Extension Category="windows.comServer">
          <com:ComServer>
            <com:ExeServer Executable="OtpAuthenticator.Widget.exe" DisplayName="OTP Widget Provider">
              <com:Class Id="8A2C4E6F-1B3D-5A7C-9E0F-2D4B6C8A0E1F" DisplayName="OtpWidgetProvider" />
            </com:ExeServer>
          </com:ComServer>
        </com:Extension>

        <!-- Widget Provider Registration -->
        <uap3:Extension Category="windows.appExtension">
          <uap3:AppExtension Name="com.microsoft.windows.widgets"
                             DisplayName="OTP Authenticator Widget"
                             Id="OtpWidget"
                             PublicFolder="Public">
            <uap3:Properties>
              <WidgetProvider>
                <ProviderIcons>
                  <Icon Path="Assets\Logo\Square44x44Logo.png" />
                </ProviderIcons>
                <Activation>
                  <CreateInstance ClassId="8A2C4E6F-1B3D-5A7C-9E0F-2D4B6C8A0E1F" />
                </Activation>
                <Definitions>
                  <Definition Id="OtpWidget"
                              DisplayName="OTP Code"
                              Description="Display your OTP codes in a widget"
                              AllowMultiple="true">
                    <Capabilities>
                      <Capability>
                        <Size Name="small" />
                      </Capability>
                      <Capability>
                        <Size Name="medium" />
                      </Capability>
                      <Capability>
                        <Size Name="large" />
                      </Capability>
                    </Capabilities>
                    <ThemeResources>
                      <Icons>
                        <Icon Path="Assets\Logo\Square44x44Logo.png" />
                      </Icons>
                      <Screenshots>
                        <Screenshot Path="Assets\Widget\WidgetScreenshot.png" DisplayAltText="OTP Widget Screenshot"/>
                      </Screenshots>
                    </ThemeResources>
                  </Definition>
                </Definitions>
              </WidgetProvider>
            </uap3:Properties>
          </uap3:AppExtension>
        </uap3:Extension>
      </Extensions>

    </Application>
  </Applications>

  <Capabilities>
    <rescap:Capability Name="runFullTrust" />
    <Capability Name="internetClient" />
    <uap:Capability Name="userAccountInformation"/>
  </Capabilities>
</Package>
