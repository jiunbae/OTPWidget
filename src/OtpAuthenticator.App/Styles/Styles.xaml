<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- OTP Code Text Style -->
    <Style x:Key="OtpCodeTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="CharacterSpacing" Value="100" />
    </Style>

    <!-- Account Item Card Style -->
    <Style x:Key="AccountCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- Issuer Text Style -->
    <Style x:Key="IssuerTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- Account Name Text Style -->
    <Style x:Key="AccountNameTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Opacity" Value="0.7" />
    </Style>

    <!-- Icon Circle Style -->
    <Style x:Key="IconCircleStyle" TargetType="Border">
        <Setter Property="Width" Value="48" />
        <Setter Property="Height" Value="48" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- Section Header Style -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,16,0,8" />
        <Setter Property="Opacity" Value="0.8" />
    </Style>

    <!-- Popup Window Style -->
    <Style x:Key="PopupContentStyle" TargetType="Grid">
        <Setter Property="Padding" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

</ResourceDictionary>
